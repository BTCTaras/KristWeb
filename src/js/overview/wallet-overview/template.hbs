{{#if loggedIn}}
	<div class="col-xs-12 m-b-1" id="wallet-overview-container">
		<div class="left-col">
			<span class="address">{{address}}</span>
			<span class="balance">{{krist balance}}</span>
		</div>
		<div class="right-col">
			{{#if isOwn}}
				<a class="button button-green" href="/transactions/make" {{#if showAllTransactionsButton}}style="margin-right: 0;"{{/if}}><i class="icon-send"></i>Send Krist</a>
			{{else}}
				<a class="button button-green" id="send-krist" {{#if showAllTransactionsButton}}style="margin-right: 0;"{{/if}}><i class="icon-send"></i>Send Krist to {{address}}</a>
			{{/if}}
			{{#if showAllTransactionsButton}}
				<a href="/transactions/all" class="button button-primary" id="show-all-transactions" style="margin-top: 0.25rem;">Show all network transactions</a>
			{{/if}}
			{{#unless hideNames}}<span class="badge badge-green-light">{{#if names}}{{names}}{{else}}0{{/if}} {{pluralize (names) "name" "names"}}</span>{{/unless}}
		</div>
	</div>
{{/if}}