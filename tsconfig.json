{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2018",
    "lib": ["es5", "es2015.promise", "dom", "es2015"],
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "inlineSources": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "outDir": "dist/js",
    "baseUrl": ".",
    "paths": {
      "*": [
        "node_modules/*",
        "src/ts/types/*"
      ]
    }
  },
  "include": [
    "src/ts/**/*"
  ]
}